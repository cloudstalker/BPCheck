<Window x:Class="BPcheck.AddSeqWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BPcheck"
        mc:Ignorable="d"
        Title="Add a sequence" Height="200" Width="300"
        Left="250" Top="250">
    <StackPanel>
        <StackPanel Height="120">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Name:" Margin="20,10,10,10"/>
                <TextBox Width="50" Height="20" Name="SeqName" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Sqeuence:" Margin="20,10,10,10" KeyDown="OnEnterKeyDown"/>
                <TextBox Width="100" Height="20" Name="SeqString" KeyDown="OnEnterKeyDown"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="50">
            <Button Height="20" Width="50" Content="OK" Margin="80,0,0,0" Name="OkButton" Click="OK_click"/>
            <Button Height="20" Width="50" Content="Cancel" Margin="40,0,0,0" Click="Cancel_click"/>
        </StackPanel>
        
    </StackPanel>
</Window>
